@import "./styles/toolbar-overrides.css";
/* 붙여넣기한 CSS — header, toolbar, table, chip 스타일(라이트/다크 토큰) */
:root{
  --bg:#0b0f14; --fg:#e5e7eb; --header-bg:#0d131a; --header-fg:#e5e7eb; --border:#1f2937;
  --card:#0f172a; --row-hover:#111827; --accent:#3b82f6;
  --chip-retired-bg:#3b1111; --chip-retired-fg:#fca5a5;
  --input-bg:var(--card); --input-fg:var(--fg); --placeholder:#6b7280;
}
:root[data-theme="light"]{
  --bg:#fff; --fg:#0f172a; --header-bg:#f8fafc; --header-fg:#0f172a; --border:#e5e7eb;
  --card:#ffffff; --row-hover:#f3f4f6; --accent:#2563eb;
  --chip-retired-bg:#fee2e2; --chip-retired-fg:#7f1d1d;
  --input-bg:#ffffff; --input-fg:#0f172a; --placeholder:#9aa5b1;
}
*{box-sizing:border-box} body{margin:0;padding:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Pretendard,Apple SD Gothic Neo,MalgunGothic,sans-serif;background:var(--bg);color:var(--fg)}
.main{width:100%}
.header{position:sticky;top:0;z-index:50;display:flex;align-items:center;gap:12px;padding:10px 16px;background:var(--header-bg);color:var(--header-fg);border-bottom:1px solid var(--border)}
.brand{font-weight:700;cursor:pointer;padding:6px 10px;border-radius:8px}
.nav{display:flex;gap:8px;margin-left:8px}
.nav a{padding:6px 10px;border-radius:8px;color:inherit;opacity:.85;text-decoration:none}
.nav a.active,.nav a:hover{background:var(--row-hover);opacity:1}
.spacer{flex:1}
.theme-toggle{appearance:none;border:1px solid var(--border);background:transparent;color:inherit;padding:6px 10px;border-radius:8px;cursor:pointer}
.toolbar{display:flex;align-items:center;gap:8px;margin:8px 0 12px}
.search{flex:1}
.search input{width:100%;height:36px;padding:8px 12px;border-radius:8px;border:1px solid var(--border);background:var(--input-bg);color:var(--input-fg);outline:none}
.search input::placeholder{color:var(--placeholder)}
.btn{appearance:none;border:1px solid var(--border);background:var(--card);color:var(--fg);padding:8px 12px;border-radius:8px;cursor:pointer}
.btn:hover{background:var(--row-hover)}
.btn-primary{background:var(--accent);border-color:var(--accent);color:#fff}
.btn-danger{background:#fff0f0;border-color:var(--border);color:var(--chip-retired-fg)}
.table{width:100%;border-collapse:separate;border-spacing:0;border:1px solid var(--border);border-radius:10px;overflow:hidden}
.table thead th{background:var(--card);color:var(--fg);font-weight:600;text-align:left;font-size:13px;border-bottom:1px solid var(--border);padding:10px 12px}
.table tbody td{padding:10px 12px;border-bottom:1px solid var(--border)}
.table tbody tr:hover{background:var(--row-hover)}
.chip{display:inline-flex;padding:4px 8px;border-radius:999px;font-size:12px;line-height:1}
.chip.working{background:rgba(59,130,246,0.08);color:var(--accent)}
.chip.plan{background:rgba(16,185,129,0.08);color:#10b981}
.chip.retired{background:var(--chip-retired-bg);color:var(--chip-retired-fg)}

:root{
  --header-bg: rgba(15,23,42,0.7);
  --active-bg:#334155;
  --active-fg:#ffffff;
  --fg:#e5e7eb;
  --border:#26313b;
  --card-bg: rgba(255,255,255,0.02);
}

/* 토막 유틸 */
.input{ padding:8px 10px; border:1px solid var(--border); background:transparent; border-radius:8px; color:inherit; }
.select{ padding:8px 10px; border:1px solid var(--border); background:transparent; border-radius:8px; color:inherit; }
.btn{ padding:8px 12px; border:1px solid var(--border); border-radius:8px; background:transparent; color:inherit; }
.btn.primary{ background:#2563eb; border-color:#2563eb; color:#fff; }
.btn.danger{ background:#ef4444; border-color:#ef4444; color:#fff; }
.table{ width:100%; border-collapse: separate; border-spacing:0 }
.th, .td{ padding:8px 10px; border-bottom:1px solid var(--border); white-space:nowrap; }
.th-head{ position:sticky; top:0; background:rgba(2,6,23,0.7); backdrop-filter:blur(6px); }
.tr:hover .td{ background:rgba(255,255,255,0.02); }
.spacer{ flex:1 }
.segmented{ display:flex; border:1px solid var(--border); border-radius:8px; overflow:hidden }
.seg{ padding:6px 10px; border:none; background:transparent; color:inherit }
.seg.active{ background:#334155; color:#fff }
.muted{ opacity:.75 }
.mono{ font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }

/* toolbar tones */
.tb-input,.tb-select{
  height: 34px; padding: 0 10px; border-radius: 8px;
  border: 1px solid var(--border,#3a3f47);
  background: var(--input-bg, rgba(30,41,59,.35));
  color: var(--fg,#e5e7eb);
}
.tb-input::placeholder{ color: #9aa0a6; }

.tb-btn{
  height: 34px; padding: 0 12px; border-radius: 8px;
  border: 1px solid var(--border,#3a3f47);
  background: var(--btn-bg, rgba(31,41,55,.45));
  color: var(--fg,#e5e7eb);
}
.tb-btn:hover{ background: rgba(31,41,55,.65); }
.tb-btn.hollow{ background: transparent; }
.tb-btn.danger{ border-color:#6b2b2b; color:#ffb4b4; }
.tb-btn.create{ background: rgba(148,163,184,.22); color:#e5e7eb; } /* 채도 낮춘 회색 */
:root[data-theme="light"] .tb-input,
:root[data-theme="light"] .tb-select{ background:#f6f7f9; color:#111; border-color:#d9dde3; }
:root[data-theme="light"] .tb-btn{ background:#f1f3f6; color:#222; border-color:#d9dde3; }
:root[data-theme="light"] .tb-btn.hollow{ background:transparent; }
:root[data-theme="light"] .tb-btn.danger{ color:#b71c1c; border-color:#e6bcbc; }
:root[data-theme="light"] .tb-btn.create{ background:#eceff3; color:#222; } /* 낮은 채도 그레이 */
